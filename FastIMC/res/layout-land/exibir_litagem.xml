<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExibirListagemActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="top"
        android:gravity="top"
        android:background="#D3D3D3"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvFiltro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tvFiltro"
            android:textSize="10sp" />
        
        <RadioGroup
            android:id="@+id/rgFiltro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp" 
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rbSemana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textSize="10sp" 
                android:text="@string/rbSemana" >
            </RadioButton>

            <RadioButton
                android:id="@+id/rbMes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp" 
                android:text="@string/rbMes" >
            </RadioButton>
            
            <RadioButton
                android:id="@+id/rbAno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp" 
                android:text="@string/rbAno" >
            </RadioButton>
            
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="top"
        android:gravity="top"
        android:background="#778899"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvTData"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/tvTData"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvTUser"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/tvTUser"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvTSexo"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="@string/tvTSexo"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvTAltura"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="@string/tvTAltura"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvTPeso"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="@string/tvTPeso"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tvTResultado"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/tvTResultado"
            android:textSize="10sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvDados"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" >
    </ListView>

</LinearLayout>